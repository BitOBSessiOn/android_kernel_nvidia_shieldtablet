DHDOFILES = bcmsdh.o bcmsdh_linux.o bcmsdh_sdmmc.o bcmsdh_sdmmc_linux.o \
	dhd_cdc.o dhd_cfg80211.o dhd_common.o dhd_custom_gpio.o dhd_ip.o    \
	dhd_linux.o dhd_linux_sched.o dhd_pno.o dhd_sdio.o dhd_wlfc.o       \
	aiutils.o bcmevent.o bcmutils.o bcmwifi_channels.o hndpmu.o         \
	linux_osl.o sbutils.o siutils.o wldev_common.o wl_android.o         \
	wl_cfg80211.o wl_cfgp2p.o wl_linux_mon.o wl_cfgvendor.o

ifneq ($(findstring QMONITOR, $(DHDCFLAGS)),)
 DHDOFILES += dhd_qmon.o
endif

ifneq ($(CONFIG_BCMDHD_CUSTOM_SYSFS_TEGRA),)
  DHDOFILES += dhd_custom_sysfs_tegra.o
  DHDOFILES += dhd_custom_sysfs_tegra_ping.o
  DHDOFILES += dhd_custom_sysfs_tegra_rssi.o
  DHDOFILES += dhd_custom_sysfs_tegra_scan.o
  DHDOFILES += dhd_custom_sysfs_tegra_stat.o
  DHDOFILES += dhd_custom_sysfs_tegra_tcpdump.o
  DHDOFILES += dhd_custom_sysfs_tegra_netstat.o
  DHDOFILES += dhd_custom_sysfs_tegra_rf_test.o
endif

ifneq ($(CONFIG_BCMDHD88_TEGRA_REGION_BASED_NVRAM),)
  DHDOFILES += nvram_params.o
  DHDCFLAGS += -DTEGRA_REGION_BASED_NVRAM
endif
obj-$(CONFIG_BCMDHD88) += bcmdhd.o
bcmdhd-objs += $(DHDOFILES)

EXTRA_CFLAGS = $(DHDCFLAGS)
ifeq ($(CONFIG_BCMDHD88),m)
 EXTRA_LDFLAGS += --strip-debug
endif
